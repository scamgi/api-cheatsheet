{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compila LaTeX",
            "type": "shell",
            "command": "pdflatex",
            "args": [
                "-output-directory=build",
                "-interaction=nonstopmode",
                "-file-line-error",
                "main.tex"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": false,
                "clear": true
            },
            "problemMatcher": [
                "$pdflatex"
            ]
        }
    ]
}